<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextAppearance.SpeakUp.Heading" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">@dimen/text_size_xxl</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.SpeakUp.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_size_lg</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.SpeakUp.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.SpeakUp.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.SpeakUp.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.SpeakUp.Label" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.SpeakUp.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:minHeight">@dimen/button_height_lg</item>
        <item name="android:paddingStart">@dimen/spacing_lg</item>
        <item name="android:paddingEnd">@dimen/spacing_lg</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="Widget.SpeakUp.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:minHeight">@dimen/button_height_lg</item>
        <item name="android:paddingStart">@dimen/spacing_lg</item>
        <item name="android:paddingEnd">@dimen/spacing_lg</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <!-- Input Field Styles -->
    <style name="Widget.SpeakUp.EditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:background">@drawable/bg_input_field</item>
        <item name="android:minHeight">@dimen/input_height</item>
        <item name="android:paddingStart">@dimen/spacing_md</item>
        <item name="android:paddingEnd">@dimen/spacing_md</item>
    </style>
</resources>
