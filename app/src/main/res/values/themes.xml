<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SpeakUp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Brand Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- UI Colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:textColorPrimary">@color/text_dark</item>
        <item name="android:textColorSecondary">@color/text_gray</item>
        
        <!-- System Bars -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.SpeakUp" parent="Base.Theme.SpeakUp" />

    <!-- ===== Splash Screen Theme ===== -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Deep navy background -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <!-- Gold education logo -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <!-- After splash, apply the main app theme -->
        <item name="postSplashScreenTheme">@style/Theme.SpeakUp</item>
    </style>

</resources>